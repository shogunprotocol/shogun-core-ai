# CoreDAO RPC Configuration
RPC_URL=https://rpc.coredao.org
RPC_URL_FALLBACK_1=https://rpc-core.icecreamswap.com
RPC_URL_FALLBACK_2=https://core.public-rpc.com

# Wallet Configuration (Optional - leave empty for read-only mode)
PRIVATE_KEY=
WALLET_ADDRESS=

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Arbitrage Configuration
MIN_PROFIT_THRESHOLD=0.003  # 0.3% minimum profit
MAX_POSITION_SIZE=0.1       # 0.1 BTC maximum position
SLIPPAGE_TOLERANCE=0.02     # 2% maximum slippage
GAS_PRICE_GWEI=20          # Gas price in gwei for CoreDAO

# Operational Modes
DRY_RUN=true               # Set to false for live trading
ENABLE_FLASHLOANS=false    # Flash loan arbitrage
SCAN_INTERVAL=10           # Seconds between scans

# Risk Management
MAX_DAILY_VOLUME=10.0      # Maximum BTC volume per day
POSITION_TIMEOUT=300       # Position timeout in seconds
EMERGENCY_STOP=false       # Emergency stop flag

# Institutional Features
INSTITUTIONAL_MODE=false   # Enable institutional features
CUSTOM_RISK_PROFILE=conservative  # conservative, moderate, aggressive
PRIORITY_ACCESS=false      # Priority execution access
COMPLIANCE_REPORTING=false # Generate compliance reports

# Database Configuration
DATABASE_URL=sqlite:///iwbtc_data.db

# Monitoring and Analytics
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
SENTRY_DSN=

# CoreDAO Ecosystem
CORE_STAKING_ENABLED=false
VALIDATOR_REWARDS=true
ECOSYSTEM_FEE_SHARING=0.1  # 10% of profits shared with CoreDAO ecosystem

# DEX Priority (comma-separated, in order of preference)
DEX_PRIORITY=icecreamswap,archerswap,shadowswap,lfgswap

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=8080

# API Configuration
API_ENABLED=true
API_PORT=3000
API_RATE_LIMIT=100  # requests per minute